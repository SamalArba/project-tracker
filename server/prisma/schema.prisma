datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id         Int      @id @default(autoincrement())
  name       String
  clientName String?
  status     String   @default("New") // New | InProgress | Done
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
